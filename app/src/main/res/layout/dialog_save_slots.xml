<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#222222">

    <!-- Bloc quicksave unifié -->
    <LinearLayout
        android:id="@+id/quicksave_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="4dp"
        android:background="#2A2A2A"
        android:layout_marginBottom="8dp"
        android:clipToOutline="true"
        android:elevation="2dp">
        <FrameLayout
            android:layout_width="48dp"
            android:layout_height="32dp">
            <ImageView
                android:id="@+id/quick_img"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:maxWidth="48dp"
                android:maxHeight="45dp"
                android:background="#333333"
                android:scaleType="centerInside"
                android:contentDescription="Aperçu quicksave" />
            <TextView
                android:id="@+id/quick_empty"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Vide"
                android:textColor="#BBBBBB"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="12sp"
                android:background="@android:color/transparent"
                android:visibility="gone" />
        </FrameLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <Button
                android:id="@+id/quick_load"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Charger le quicksave"
                android:textColor="#FF9800"
                android:backgroundTint="#333333"
                android:backgroundTintMode="src_in" />
            <TextView
                android:id="@+id/quick_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="12sp"
                android:textColor="#BBBBBB"
                android:gravity="end"
                android:paddingTop="2dp" />
        </LinearLayout>
        <Button
            android:id="@+id/quick_delete"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="🗑️"
            android:contentDescription="Supprimer le quicksave"
            android:background="@android:color/transparent"
            android:textColor="#FF9800"
            android:textSize="18sp"
            android:padding="0dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#333" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
