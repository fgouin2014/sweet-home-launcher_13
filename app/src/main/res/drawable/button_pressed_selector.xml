        <shape android:shape="rectangle">
            <solid android:color="#33000000"/>
            <corners android:radius="999dp"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/>
            <corners android:radius="999dp"/>
        </shape>
    </item>
</selector> 